<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Chrono"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
        <Button android:text="0'25"
                android:id="@+id/bone"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">
        </Button>
        <Button android:text="2'00"
                android:id="@+id/btwo"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">
        </Button>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
        <Button android:text="3'00"
                android:id="@+id/bthree"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">
        </Button>
        <Button android:text="4'00"
                android:id="@+id/bfour"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">
        </Button>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
        <TextView android:id="@+id/labelSeriesDisplay"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Series :"/>
        <TextView android:id="@+id/labelSeriesCount"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0"/>
        <ImageButton android:id="@+id/baide"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/aide"/>

        <Button android:id="@+id/resetButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset"/>
        <Chronometer android:id="@+id/serieChronometer"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>